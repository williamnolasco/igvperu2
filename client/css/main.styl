		flex-column-wrap(center, center)
		.feature 
			flex-column-wrap(center, center)
			width 80%
			&:nth-of-type(2)
				margin-left 0
				margin-top 40px
			p 
				text-align center
				&:nth-of-type(1)
					margin 30px 0 15px
	.notifications-container
		img 
			display none
		.notifications-content
			flex-column-wrap(center, center)
			width 80%
			margin-left 0
			h2, p 
				text-align center
	.global-container
		.global-content
			flex-column-wrap(center, center)
			width 80%
			margin-right 0
			h2, p 
				text-align center
		.image-map
			display none
	.what-they-say-container
		.commentary
			width calc(100% - 40px)
			.row-photos
				width 100%
				justify-content space-around
				.photo
					width 50px 
					height 50px
					margin 0
				.photo-activated 
					width 60px 
					height 60px
					box-shadow 15px 15px 35px 5px rgba(0,0,0,0.1)
	.plans-container
		.plans-left
			p 
				&:nth-of-type(1)
					text-align center
		.plans-right
			flex-column-wrap(center, center)
			width auto
			margin-left 0
			.starter-card, .pro-card
				width 280px
				padding 30px 15px
			.pro-card
				left 0
				-webkit-transform scale(1)
				transform scale(1)
				margin-top 60px
@media screen and (max-width: 630px)
	.home-container
		.home-background
			.home-content
				width 90%
	.notifications-container
		.notifications-content
			width 100% 
	.screenshots-container
		.row-screenshots
			img 
				width 140px
				height 250px
				&:nth-of-type(3)
					width 170px
					height 340px
	.global-container
		.global-content
			width 100%
	.download-container, .subscribe-container
		.email-container
			width 90%
	.download-container
		p 
			&:nth-of-type(1)
				text-align center
	footer
		.footer-left
			p 
				width 100%
			.row-social-links
				justify-content center
				a 
					margin 0 20px 20px
		.footer-right
			ul 
				width 50%
				align-items center
				li 
					text-align center
				&:nth-of-type(3)
					margin-top 30px
		.footer-bottom
			.contact, .powered-by
				justify-content center
			.contact
				p, a 
					text-align center
@media screen and (max-width: 470px)
	html 
		font-size 17px
	.header-movil
		span 
			left 15px
			font-size 1.5rem
	.feature-container, .notifications-container, .global-container, .screenshots-container, .download-container, .what-they-say-container, .plans-container, .subscribe-container
		padding 40px 20px
	.notifications-container
		.notifications-content
			.row-notifications
				flex-column-wrap(center, center)
				a 
					&:nth-of-type(2)
						margin-left 0
						margin-top 20px
	.global-container
		.global-content
