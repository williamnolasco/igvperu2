		height 400px
		.home-background
			.home-content
				.home-text 
					display none
				a 
					margin-top 0
	.notifications-container 
		.notifications-content
			h2 
				font-size 1.8rem
				margin-bottom 30px
			p
				&:nth-of-type(2)
					display none
			.row-notifications 
				margin-top 20px
	.screenshots-container
		p 
			&:nth-of-type(1)
				font-size 1.8rem
		.row-screenshots
			img 
				width 180px
				height 310px
				&:nth-of-type(3)
					width 210px
