	.global-container
		.global-content 
			p 
				&:nth-of-type(2)
					display none
				&:nth-of-type(3)
					margin-top 20px
			h2 
				font-size 1.8rem
				margin-bottom 30px
	.what-they-say-container
		.commentary
			width 80%
			margin 0
			p 
				&:nth-of-type(1)
					font-size 1.5rem
	.download-container
		p 
			&:nth-of-type(1)
				font-size 1.8rem
	.plans-container
		.plans-left 
			p 
				&:nth-of-type(1)
					font-size 1.8rem
	.subscribe-container
		p 
			&:nth-of-type(1)
				font-size 1.8rem
@media screen and (max-width: 740px)
